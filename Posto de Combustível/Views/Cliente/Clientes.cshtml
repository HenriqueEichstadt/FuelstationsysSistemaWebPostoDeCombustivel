<div class="main-content">
    <div class="content-heading clearfix">
        <div class="heading-left">
            <h1 class="page-title">Cadastros</h1>
            <p class="page-subtitle">Lista de clientes</p>
        </div>
        <ul class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
            <li><a href="#">Cadastros</a></li>
            <li><a href="#">Lista de Clientes</a></li>
        </ul>
    </div>

    <div class="panel demo display">
        <div class="panel-heading">
            <h3 class="panel-title">Clientes</h3>
        </div>
        <div class="panel-body text-center">
            <p class="alert alert-info">Mensagem!</p>
            <table id="MyEstoque" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>PessoaId</th>
                        <th>Pontos</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section body_scripts{

    <script>

        $(document).ready(function () {
            $('#MyEstoque').DataTable({
                "ajax": {
                    "url": "/Cliente/ListaClientes",
                    "type": "GET",
                    "datatype": "json",
                },
                "columns": [
                    { "data": "Id", "autoWidth": true, },
                    { "data": "Pessoa.Nome", "autoWidth": true },
                    { "data": "Pontos", "autoWidth": true },

                ]
            });
        });
    </script>
}

