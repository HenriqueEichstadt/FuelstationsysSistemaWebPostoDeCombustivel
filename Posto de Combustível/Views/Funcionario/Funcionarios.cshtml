<div class="main-content">
    <div class="content-heading clearfix">
        <div class="heading-left">
            <h1 class="page-title">Estoque</h1>
            <p class="page-subtitle">Lista de funcionários</p>
        </div>
        <ul class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
            <li><a href="#">Cadastros</a></li>
            <li><a href="#">Lista de funcionários</a></li>
        </ul>
    </div>

    <div class="panel demo display">
        <div class="panel-heading">
            <h3 class="panel-title">Funcionários</h3>
        </div>
        <div class="panel-body text-center">
            <p class="alert alert-info">Mensagem!</p>
            <table id="MyEstoque" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>NomeUsuario</th>
                        <th>Cargo</th>
                        <th>Registro de pessoa</th>
                        <th>NivelAcesso</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section body_scripts{

    <script>

        $(document).ready(function () {
            $('#MyEstoque').DataTable({
                "ajax": {
                    "url": "/Funcionario/ListaFuncionarios",
                    "type": "GET",
                    "datatype": "json",
                },
                "columns": [
                    { "data": "Id", "autoWidth": true, },
                    { "data": "NomeUsuario", "autoWidth": true },
                    { "data": "Cargo", "autoWidth": true },
                    { "data": "PessoaId", "autoWidth": true },
                    { "data": "NivelAcesso", "autoWidth": true },
                ]
            });
        });
    </script>
}

