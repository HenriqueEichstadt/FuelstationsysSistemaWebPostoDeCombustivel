@{Posto_De_Combustivel.Models.Funcionario funcionarioLogado = (Posto_De_Combustivel.Models.Funcionario)HttpContext.Current.Session["FuncionarioLogado"]; }
<title>Menu Principal</title>
<div class="main-content">
    <div class="content-heading clearfix">
        <div class="heading-left">
            @{ // Mostra nome do usuário logado na sessão
                string nome = "";

                if (funcionarioLogado != null)
                {
                    nome = funcionarioLogado.NomeUsuario;
                    <h1 class="page-title">Seja Bem Vindo <span>@nome</span>!</h1>
                }
            }
            <p class="page-subtitle">Menu Principal do Sistema</p>
        </div>
        <ul class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
            <li><a href="#">Menu Principal</a></li>
        </ul>
    </div>

    <div class="container-fluid">
        <!-- TOP METRICS -->
        <div class="row">
            <div class="col-md-3 col-sm-6">
                <div class="widget widget-metric_1 animate">
                    <span class="icon-wrapper custom-bg-orange"><i class="fa fa-area-chart"></i></span>
                    <div class="right">
                        <span class="title">
                            Lucro Total em Vendas

                        </span>
                        <span id="valorTotalVendas" class="value"><i class="change-icon change-up fa fa-sort-up text-indicator-green"></i></span>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="widget widget-metric_1 animate">
                    <span class="icon-wrapper custom-bg-lightseagreen"><i class="fa fa-shopping-cart"></i></span>
                    <div class="right">
                        <span class="title">
                            Número de Vendas
                        </span>
                        <span id="numeroTotalDeVendas" class="value"><i class="change-icon change-up fa fa-sort-up text-indicator-green"></i></span>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="widget widget-metric_1 animate">
                    <span class="icon-wrapper custom-bg-blue2"><i class="fa fa-user"></i></span>
                    <div class="right">
                        <span class="value">132567 <i class="change-icon change-down fa fa-sort-down text-indicator-red"></i></span>
                        <span class="title">
                            TOTAL USER
                            <span class="change text-indicator-red">(- 23)</span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="widget widget-metric_1 animate">
                    <span class="icon-wrapper custom-bg-purple"><i class="fa fa-envelope"></i></span>
                    <div class="right">
                        <span class="value">56.72% <i class="change-icon change-up fa fa-sort-up text-indicator-green"></i></span>
                        <span class="title">
                            CLICK
                            <span class="change text-indicator-green">(+ 12.64%)</span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <!-- END TOP METRICS -->
        <!-- Vendas -->
        <div class="col-md-6">
            <div class="widget">
                <ul class="list-unstyled list-widget-horizontal no-border row">
                    <li class="col-md-6">
                        <div class="widget-metric_2">
                            <i class="fa fa-calendar-o icon"></i>
                            <div class="right">
                                <span class="title">WEEKLY REVENUE</span>
                                <span class="value">$738</span>
                                <span class="percentage text-indicator-red"><i class="fa fa-level-down"></i> 2.67%</span>
                            </div>
                        </div>
                    </li>
                    <li class="col-md-6">
                        <div class="widget-metric_2">
                            <i class="fa fa-shopping-basket icon"></i>
                            <div class="right">
                                <span class="title">WEEKLY SALES</span>
                                <span class="value">236</span>
                                <span class="percentage text-indicator-green"><i class="fa fa-level-up"></i> 14.86%</span>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <!-- Fim Vendas -->
        <div class="col-sm-3">
            <div class="widget widget-metric_3">
                <span class="title text-muted">Avg. Handle Time</span>
                <span class="value">1m:24s</span>
                <span class="note">Min: 30s &nbsp; Max: 2m:15s</span>
            </div>
        </div>
    </div>
</div>

@section body_scripts{

    <script src="~/Content/javascript/Home.js"></script>

}